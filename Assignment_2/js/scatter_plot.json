{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 800,
    "height": 500,
    "title": "People's Hapiness Score and corresponding GDP per capita (2015 - 2019)",
    "data": {
      "url": "https://raw.githubusercontent.com/donnnnnnieeeeee011012/ass2/main/Assignment_2/data/Hapiness_gdp_distribution.csv"
    },
    "params": [
      {
        "name": "Score_Above",
        "value": 0,
        "bind": {
          "input": "range",
          "min": 1,
          "max": 8,
          "step": 0.2,
          "name": "Minimum Score Above: "
        }
      },
      {
        "name": "Year_selection",
        "value":2017,
        "bind": {
          "input": "range",
          "min": 2015,
          "max": 2019,
          "step": 1,
          "name": "Year Selection: "
        }
      },
      {
        "name": "Continent_selection",
        "bind": {
          "input": "select",
          "options": [
            null,
            "North America",
            "South America",
            "Europe",
            "Africa",
            "Asia",
            "Oceania"
          ],
          "labels": [
            "Show All",
            "North America",
            "South America",
            "Europe",
            "Africa",
            "Asia",
            "Oceania"
          ],
          "name": "Continent Selection: "
        }
      }
      
    ],

    "transform": [
        {"filter": "datum.score > 0"},
        {"filter": "datum.gdp > 0"},
        {"filter": "datum.score > Score_Above"},
        {
          "filter": "Continent_selection == null || datum.region == Continent_selection"
        },
        {"filter": "datum.year == Year_selection"}

      ],
    
    "encoding": {
      "x": {
        "field": "gdp",
        "type": "quantitative",
        "title": "GDP per capita",
        "axis": {"tickCount": 7},
        "scale": {"type": "linear", "domain": [0, 2]}
      },
      "y": {
        "field": "score",
        "type": "quantitative",
        "axis": {"tickCount": 6},
        "scale": {"type": "linear", "domain": [0, 8]}
      }
    },

    "layer": [
      {
        "mark": "circle",
        "encoding": {
          "size": {
            "field": "score",
            "type": "quantitative",
            "scale": {
              "type": "threshold",
              "domain": [0, 2, 4, 6, 8],
              "range": [10, 50, 150, 200, 300, 400]
            },
            "legend": {"format": ".1s"}
          },
          "color": {
            "field": "region",
            "type": "nominal",
            "scale": {
              "domain": [
                "North America",
                "South America",
                "Europe",
                "Africa",
                "Asia",
                "Oceania"
              ],
              "range": [
                "#e41a1c",
                "#984ea3",
                "#ff7f00",
                "#a6cee3",
                "#377eb8",
                "#a65628"
              ]
            }
          },
          "opacity": {"value": 0.6},
          "tooltip": [
            {"field": "Country", "type": "nominal"},
            {"field": "score", "type": "quantitative", "format": ","},
            {"field": "gdp", "type": "quantitative", "format": ","},
            {"field": "year", "type": "ordinal", "format": ","}
          ]
        }
      },
      {
        "mark": {
          "type": "text",
          "align": "right",
          "baseline": "middle",
          "dx": -12,
          "dy":-5,
          "fontSize": 11.5,
          "fontStyle": "italic"
        },
        "encoding": {
          "text": {"field": "Country", "type": "nominal"},
          "color": {"value": "black"},
          "opacity": {
            "condition": {
              "test": "datum.Country == 'China' || datum.Country == 'Australia' || datum.Country == 'New Zealand' || datum.Country == 'Italy' || datum.Country == 'Japan'",
              "value": 1
            },
            "value": 0
          },
          "tooltip": [
            {"field": "Country", "type": "nominal"},
            {"field":"region","type": "nominal"},
            {"field": "score", "type": "quantitative", "format": ","},
            {"field": "gdp", "type": "quantitative", "format": ","},
            {"field": "year", "type": "ordinal"}
          ]
        }
      }
    ]
  }
