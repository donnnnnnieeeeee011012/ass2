{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    
    "title": "Life Expectancy changing during the year 2015 - 2019",
    
    "data": {"url": "https://raw.githubusercontent.com/donnnnnnieeeeee011012/ass2/main/Assignment_2/data/Hapiness_freedom_lifeExpectancy.csv"},
    "transform": [
      {
        "filter": {
          "field": "Country",
          "oneOf": ["China", "India", "United States", "Indonesia", "Brazil", "Australia","Singapore"]
        }
      },
      {
        "filter": {
          "field": "year",
          "oneOf": [2015, 2019]
        }
      }
    ],
    "vconcat":[
        
        {
            "width":400,
            "height":200,
            "encoding": {
                "x": {
                  "field": "gdp",
                  "type": "quantitative",
                  "title": "Gdp Per capita (years)"
                },
                "y": {
                  "field": "Country",
                  "type": "nominal",
                  "title": "Country",
                  "axis": {
                    "offset": 5,
                    "ticks": false,
                    "minExtent": 70,
                    "domain": false
                  }
                }
              },
              "layer": [
                {
                  "mark": "line",
                  "encoding": {
                    "detail": {
                      "field": "Country",
                      "type": "nominal"
                    },
                    "color": {"value": "#db646f"}
                  }
                },
                {
                  "mark": {
                    "type": "point",
                    "filled": true
                  },
                  "encoding": {
                    "color": {
                      "field": "year",
                      "type": "ordinal",
                      "scale": {
                        "domain": [2015, 2019],
                        "range": ["#e6959c", "#911a24"]
                      },
                      "title": "Year"
                    },
                    "size": {"value": 100},
                    "opacity": {"value": 1},
                    "tooltip": [
                        {"field": "Country", "type": "nominal"},
                        {"field": "gdp", "title":"Gdp Per Capita","type": "quantitative", "format": ","},
                        {"field": "year", "title":"Year","type": "ordinal"}
                    ]
                  }
                }
              ]
        },
        {
            "width":400,
            "height":200,
            "encoding": {
                "x": {
                  "field": "life_expectancy",
                  "type": "quantitative",
                  "title": "Life Expectancy (years)"
                },
                "y": {
                  "field": "Country",
                  "type": "nominal",
                  "title": "Country",
                  "axis": {
                    "offset": 5,
                    "ticks": false,
                    "minExtent": 70,
                    "domain": false
                  }
                }
              },
              "layer": [
                {
                  "mark": "line",
                  "encoding": {
                    "detail": {
                      "field": "Country",
                      "type": "nominal"
                    },
                    "color": {"value": "#db646f"}
                  }
                },
                {
                  "mark": {
                    "type": "point",
                    "filled": true
                  },
                  "encoding": {
                    "color": {
                      "field": "year",
                      "type": "ordinal",
                      "scale": {
                        "domain": [2015, 2019],
                        "range": ["#e6959c", "#911a24"]
                      },
                      "title": "Year"
                    },
                    "size": {"value": 100},
                    "opacity": {"value": 1},
                    "tooltip": [
                        {"field": "Country", "type": "nominal"},
                        {"field": "life_expectancy", "type": "quantitative","title":"Life Expectancy", "format": ","},
                        {"field": "year", "title":"Year","type": "ordinal"}
                    ]
                  }
                }
              ]
        },
        {
            "width":400,
            "height":200,
            "encoding": {
                "x": {
                  "field": "freedom",
                  "type": "quantitative",
                  "title": "Freedom of Making Life Choices (years)"
                },
                "y": {
                  "field": "Country",
                  "type": "nominal",
                  "title": "Country",
                  "axis": {
                    "offset": 5,
                    "ticks": false,
                    "minExtent": 70,
                    "domain": false
                  }
                }
              },
              "layer": [
                {
                  "mark": "line",
                  "encoding": {
                    "detail": {
                      "field": "Country",
                      "type": "nominal"
                    },
                    "color": {"value": "#db646f"}
                  }
                },
                {
                  "mark": {
                    "type": "point",
                    "filled": true
                  },
                  "encoding": {
                    "color": {
                      "field": "year",
                      "type": "ordinal",
                      "scale": {
                        "domain": [2015, 2019],
                        "range": ["#e6959c", "#911a24"]
                      },
                      "title": "Year"
                    },
                    "size": {"value": 100},
                    "opacity": {"value": 1},
                    "tooltip": [
                        {"field": "Country", "type": "nominal"},
                        {"field": "freedom", "type": "quantitative","title":"Freedom of Making Life Choice","format": ","},
                        {"field": "year", "title":"Year","type": "ordinal"}
                    ]
                  }
                }
              ]
        }
    ]
  }
